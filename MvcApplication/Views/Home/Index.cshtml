@model MvcApplication.Models.CategoryProductViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Northwind Traders</h1>
    <p class="lead">Northwind traders is a  online firm selling somethig since 2000 </p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>
@using (Html.BeginForm()) {
<section class="row">
    <div class="col-4 text-right">
        Selected Category
    </div>
    <div class="col-6">
        @Html.DropDownList("SelectedCategoryId",
        new SelectList(Model.Categories, "CategoryId", "CategoryName"),
        new { @class = "form-control" })
    </div>
    <div class="col-2 text-left">
        <input type="submit" value="Fetch" class="btn btn-primary"/>
    </div>
</section>
    var grid = new WebGrid(
    source: Model.Products,
    columnNames: new string[] { "ProductName", "UnitPrice" },
    rowsPerPage: 10, canPage: true);
<section class="row">
    <div class="col-6 offset-3">
        @grid.GetHtml(
     tableStyle: "table table-stripped table-sm",
     columns: new WebGridColumn[]
     {
           new WebGridColumn{ColumnName="ProductName",Header="ProductName"},
           new WebGridColumn{ColumnName="UnitPrice",Header="UnitPrice"}
     })
    </div>
</section>


    }